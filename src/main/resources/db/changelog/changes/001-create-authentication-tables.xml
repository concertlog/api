<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001-create-authentication-tables" author="dylfrancis">
        <comment>Create core authentication tables for ConcertLog</comment>

        <!-- Users table -->
        <createTable tableName="users">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_users_email"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints unique="true" uniqueConstraintName="uk_users_username"/>
            </column>
            <column name="first_name" type="VARCHAR(50)"/>
            <column name="last_name" type="VARCHAR(50)"/>
            <column name="avatar_url" type="VARCHAR(500)"/>
            <column name="is_verified" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- User passwords table -->
        <createTable tableName="user_passwords">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_user_passwords"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_passwords_user_id" references="users(id)"
                             deleteCascade="true"/>
            </column>
            <column name="password_hash" type="VARCHAR(60)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- OAuth providers table -->
        <createTable tableName="oauth_providers">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_oauth_providers"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_oauth_providers_name"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- User OAuth accounts table -->
        <createTable tableName="user_oauth_accounts">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_user_oauth_accounts"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_oauth_accounts_user_id" references="users(id)"
                             deleteCascade="true"/>
            </column>
            <column name="provider_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_oauth_accounts_provider_id"
                             references="oauth_providers(id)"/>
            </column>
            <column name="provider_user_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="provider_username" type="VARCHAR(100)"/>
            <column name="provider_email" type="VARCHAR(255)"/>
            <column name="access_token" type="TEXT"/>
            <column name="refresh_token" type="TEXT"/>
            <column name="token_expires_at" type="TIMESTAMP"/>
            <column name="provider_data" type="JSONB"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- User sessions table -->
        <createTable tableName="user_sessions">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_user_sessions"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_sessions_user_id" references="users(id)"
                             deleteCascade="true"/>
            </column>
            <column name="session_token" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_user_sessions_session_token"/>
            </column>
            <column name="refresh_token" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_user_sessions_refresh_token"/>
            </column>
            <column name="device_info" type="VARCHAR(255)"/>
            <column name="ip_address" type="VARCHAR(45)"/>
            <column name="user_agent" type="TEXT"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Password reset tokens table -->
        <createTable tableName="password_reset_tokens">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_password_reset_tokens"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_password_reset_tokens_user_id" references="users(id)"
                             deleteCascade="true"/>
            </column>
            <column name="token" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_password_reset_tokens_token"/>
            </column>
            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="used_at" type="TIMESTAMP"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Email verification tokens table -->
        <createTable tableName="email_verification_tokens">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_email_verification_tokens"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_email_verification_tokens_user_id"
                             references="users(id)" deleteCascade="true"/>
            </column>
            <column name="token" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_email_verification_tokens_token"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="verified_at" type="TIMESTAMP"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Add unique constraint for user_oauth_accounts (provider_id, provider_user_id) -->
        <addUniqueConstraint
                tableName="user_oauth_accounts"
                columnNames="provider_id, provider_user_id"
                constraintName="uk_user_oauth_accounts_provider_user"/>

        <!-- Create indexes -->
        <createIndex tableName="user_oauth_accounts" indexName="idx_user_oauth_accounts_user_id">
            <column name="user_id"/>
        </createIndex>

        <createIndex tableName="user_sessions" indexName="idx_user_sessions_session_token">
            <column name="session_token"/>
        </createIndex>

        <createIndex tableName="user_sessions" indexName="idx_user_sessions_refresh_token">
            <column name="refresh_token"/>
        </createIndex>

        <createIndex tableName="user_sessions" indexName="idx_user_sessions_user_id">
            <column name="user_id"/>
        </createIndex>

        <createIndex tableName="user_sessions" indexName="idx_user_sessions_expires_at">
            <column name="expires_at"/>
        </createIndex>

        <createIndex tableName="password_reset_tokens" indexName="idx_password_reset_tokens_token">
            <column name="token"/>
        </createIndex>

        <createIndex tableName="password_reset_tokens" indexName="idx_password_reset_tokens_expires_at">
            <column name="expires_at"/>
        </createIndex>

        <createIndex tableName="email_verification_tokens" indexName="idx_email_verification_tokens_token">
            <column name="token"/>
        </createIndex>

        <createIndex tableName="email_verification_tokens" indexName="idx_email_verification_tokens_expires_at">
            <column name="expires_at"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>