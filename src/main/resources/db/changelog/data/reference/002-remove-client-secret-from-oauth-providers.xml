<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="002-remove-client-id-from-oauth-providers" author="dylfrancis">
        <comment>Remove client_id column from oauth_providers table - credentials moved to environment variables
        </comment>

        <dropColumn tableName="oauth_providers" columnName="client_id"/>

        <rollback>
            <addColumn tableName="oauth_providers">
                <column name="client_id" type="VARCHAR(255)"/>
            </addColumn>
        </rollback>

    </changeSet>

</databaseChangeLog>